{
    "name": "childcare-platform-vue3",
    "version": "1.0.0",
    "description": "留守儿童帮扶平台 - Vue3版本",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "dev:admin": "vite --config vite.admin.config.ts",
        "dev:user": "vite --config vite.config.ts",
        "build": "vue-tsc && vite build",
        "build:admin": "vue-tsc && vite build --config vite.admin.config.ts",
        "build:user": "vue-tsc && vite build --config vite.config.ts",
        "preview": "vite preview",
        "preview:admin": "vite preview --port 3001",
        "preview:user": "vite preview --port 3000",
        "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
        "type-check": "vue-tsc --noEmit"
    },
    "dependencies": {
        "vue": "^3.4.0",
        "vue-router": "^4.2.5",
        "pinia": "^2.1.7",
        "element-plus": "^2.4.4",
        "@element-plus/icons-vue": "^2.3.1",
        "axios": "^1.6.2",
        "tailwindcss": "^3.3.6",
        "@tailwindcss/forms": "^0.5.7",
        "chart.js": "^4.4.0",
        "vue-chartjs": "^5.3.0",
        "dayjs": "^1.11.10",
        "nprogress": "^0.2.0"
    },
    "devDependencies": {
        "@types/node": "^20.10.0",
        "@vitejs/plugin-vue": "^4.5.2",
        "@vue/tsconfig": "^0.5.1",
        "autoprefixer": "^10.4.16",
        "eslint": "^8.55.0",
        "eslint-plugin-vue": "^9.19.2",
        "postcss": "^8.4.32",
        "typescript": "~5.3.0",
        "vite": "^5.0.8",
        "vue-tsc": "^1.8.25"
    }
}